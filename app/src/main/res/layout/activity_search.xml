<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorEee"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/search_return"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@mipmap/ico_information_return"
        />
        <EditText
            android:id="@+id/search_input_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/shape_input_register"
            android:drawableLeft="@mipmap/ico_search"
            android:drawablePadding="8dp"
            android:hint="请输入搜索内容"
            android:lines="1"
            android:singleLine="true"
            android:maxLines="1"
            android:paddingLeft="8dp"
            android:textColorHint="@color/color999"
            android:textSize="14sp"
        />
        <TextView
            android:id="@+id/search_search"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/color666"
            android:textSize="14sp"
        />
    </LinearLayout>
    <View
        style="@style/view_horizontal"
        android:layout_height="0.5dp"
        android:background="@color/color999"/>
    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <View
                android:layout_width="3dp"
                android:layout_height="22dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorMain"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="热词"
                android:textColor="@color/color999"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <me.gujun.android.taggroup.TagGroup
            android:id="@+id/search_hot_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            app:atg_textColor="#fff"
            app:atg_textSize="14sp"
            app:atg_borderColor="@color/colorBlue5"
            app:atg_borderStrokeWidth="0dp"
            app:atg_backgroundColor="@color/colorBlue5"
            app:atg_pressedBackgroundColor="@color/colorMain"
            app:atg_horizontalPadding="14dp"
            app:atg_horizontalSpacing="7dp"
            app:atg_verticalPadding="6dp"
            app:atg_verticalSpacing="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp">
            <View
                android:layout_width="3dp"
                android:layout_height="22dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorMain"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="历史搜索"
                android:textColor="@color/color999"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <ListView
            android:id="@+id/search_history_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/colorLoginInput"
            android:dividerHeight="0.5dp"/>
        <TextView
            android:id="@+id/search_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="清楚历史搜索记录"
            android:textColor="@color/color999"
            android:textSize="12sp"/>
    </LinearLayout>
    <com.yimiao100.sale.view.PullToRefreshListView
        android:id="@+id/search_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:divider="@color/colorLoginInput"
        android:dividerHeight="0.5dp"
        android:listSelector="?android:attr/selectableItemBackground"
        android:visibility="gone"/>
    <include
        android:id="@+id/search_empty"
        layout="@layout/empty_view"/>
</LinearLayout>
