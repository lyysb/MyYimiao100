<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/select_all"
        android:text="全选"
        android:textSize="15sp"
        android:textColor="@color/color999"
        android:paddingLeft="14dp"
        android:layout_marginLeft="4dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:layout_centerVertical="true"
        android:button="@drawable/selector_pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/select_all_confirm"
        android:text="确定竞标"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:background="@drawable/selector_button2"
        android:layout_alignParentRight="true"
        android:layout_width="112dp"
        android:layout_height="44dp" />
    <TextView
        android:id="@+id/select_all_count"
        android:text="0个"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@id/select_all_confirm"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:textColor="@color/colorRed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/select_note"
        android:text="已选择："
        android:textSize="10sp"
        android:textColor="@color/color333"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/select_all_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>