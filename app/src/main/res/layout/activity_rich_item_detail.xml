<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/rich_item_title"
        app:left_isShow="true"
        app:title_text="详情"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:text="交易成功"
            android:textSize="23sp"
            android:textColor="@color/colorMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View style="@style/view_horizontal"/>
        <LinearLayout
            style="@style/style55"
            >
            <TextView
                android:text="进账金额"
                style="@style/style53"/>
            <TextView
                android:id="@+id/rich_item_amount"
                style="@style/style54"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/style55"
            >
            <TextView
                android:text="处理时间"
                style="@style/style53"/>
            <TextView
                android:id="@+id/rich_item_time"
                style="@style/style54"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/style55"
            >
            <TextView
                android:text="交易类型"
                style="@style/style53"/>
            <TextView
                android:id="@+id/rich_item_type"
                style="@style/style54"
                />
        </LinearLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            style="@style/view_horizontal"/>
        <LinearLayout
            android:id="@+id/rich_item_ll"
            android:padding="12dp"
            android:visibility="gone"
            android:background="@mipmap/ico_detailed_fillet"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="厂家："
                    android:layout_marginRight="10dp"
                    style="@style/style53"/>
                <TextView
                    android:id="@+id/rich_item_vendor"
                    android:gravity="left"
                    style="@style/style54"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="客户："
                    android:layout_marginRight="10dp"
                    style="@style/style53"/>
                <TextView
                    android:id="@+id/rich_item_customer_name"
                    android:gravity="left"
                    style="@style/style54"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="产品："
                    android:layout_marginRight="10dp"
                    style="@style/style53"/>
                <TextView
                    android:id="@+id/rich_item_product_name"
                    android:gravity="left"
                    style="@style/style54"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="剂型："
                    android:layout_marginRight="10dp"
                    style="@style/style53"/>
                <TextView
                    android:id="@+id/rich_item_dosage_name"
                    android:gravity="left"
                    style="@style/style54"/>
                <TextView
                    android:text="规格："
                    android:layout_marginRight="10dp"
                    style="@style/style53"/>
                <TextView
                    android:id="@+id/rich_item_spec"
                    android:gravity="left"
                    style="@style/style54"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="协议单号："
                    android:layout_marginRight="10dp"
                    style="@style/style53"/>
                <TextView
                    android:id="@+id/rich_item_serial_no"
                    android:gravity="left"
                    style="@style/style54"/>
            </LinearLayout>


        </LinearLayout>
        <ImageView
            android:id="@+id/rich_item_apply_service"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ico_bond_customer_service"/>
    </LinearLayout>
</LinearLayout>
