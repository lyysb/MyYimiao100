<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/scholarship_cash_title_personal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_isShow="true"
        app:title_text="奖学金提现"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ico_reconciliation_background"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue3"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人推广"
                    android:textColor="@color/colorBlue10"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/scholarship_cash_end_personal"
                    android:text="尾号----"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorBlue10"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:text="申请提现金额："
                android:textColor="@color/color666"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp">
                <TextView
                    android:id="@+id/scholarship_cash_money_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¥0.00"
                    android:textColor="@color/color666"
                    android:textStyle="bold"
                    android:textSize="19sp"/>
            </LinearLayout>
            <View
                style="@style/view_horizontal"/>
            <LinearLayout
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="可提现金额："
                    android:textColor="@color/color8b"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/scholarship_cash_final_personal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="¥0.00"
                    android:textStyle="bold"
                    android:textColor="@color/color333"
                    android:textSize="22sp"/>

            </LinearLayout>
            <TextView
                android:background="@android:color/white"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(扣除个税及管理费用后可得)"
                android:textColor="@color/color8b"
                android:paddingRight="12dp"
                android:paddingBottom="12dp"
                android:textSize="10sp"/>
            <View
                style="@style/view_horizontal"/>
            <TextView
                android:id="@+id/scholarship_cash_phone_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:text="联系方式："
                android:textColor="@color/color8b"
                android:textSize="14sp"/>
            <View
                style="@style/view_horizontal"/>

            <ImageView
                android:id="@+id/scholarship_cash_apply_service_personal"
                android:layout_marginTop="160dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ico_bond_customer_service"/>
            <ImageButton
                android:id="@+id/scholarship_cash_apply_cash_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@null"
                android:src="@drawable/selector_assurance_apply_cash"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
