<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@mipmap/ico_head_reconcilation_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/head_product_formal_name"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="26dp"
        android:layout_gravity="center_vertical"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@mipmap/ico_reconciliation_circle"
        android:gravity="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/color666"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/head_vendor_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/color333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/head_customer_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/color333"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/head_product_common_name"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/head_dosage_form"
                android:layout_weight="1"
                android:text="剂型："
                android:textSize="9sp"
                android:textColor="@color/color999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/head_spec"
                android:layout_weight="1"
                android:text="规格："
                android:textSize="9sp"
                android:textColor="@color/color999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:id="@+id/head_serial_no"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="协议单号："
            android:textSize="9sp"
            android:textColor="@color/color999"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>