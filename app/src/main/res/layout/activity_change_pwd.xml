<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/change_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_isShow="true"
        app:title_text="修改密码"
        />

    <LinearLayout
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:text="请牢记您的新密码"
            android:textColor="@color/color999"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_input_register"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_register_password"
                />
            <TextView
                android:layout_marginLeft="17dp"
                android:layout_width="77dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="原密码"/>
            <EditText
                android:id="@+id/change_now_pwd"
                android:hint="请输入现在的密码"
                android:textColorHint="@color/color999"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:lines="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_input_register"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_register_password"
                />
            <TextView
                android:layout_marginLeft="17dp"
                android:layout_width="77dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="新密码"/>
            <EditText
                android:id="@+id/change_pwd_new"
                android:hint="请输入6-16位的数字、字母或符号"
                android:textColorHint="@color/color999"
                android:textSize="12sp"
                android:inputType="textPassword"
                android:lines="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:background="@drawable/shape_input_register"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_register_password"
                />
            <TextView
                android:layout_marginLeft="17dp"
                android:layout_width="77dp"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:text="确认密码"/>
            <EditText
                android:id="@+id/change_pwd_confirm"
                android:hint="请再次输入密码"
                android:textColorHint="@color/color999"
                android:textSize="12sp"
                android:lines="1"
                android:inputType="textPassword"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <Button
            android:id="@+id/change_submit"
            android:text="提交"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="80dp"
            android:background="@drawable/shape_button_forbid"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
