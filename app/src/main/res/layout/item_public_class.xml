<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="9dp">
    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/open_class_sample"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_default_short_picture"/>
        <TextView
            android:id="@+id/open_class_status"
            android:text="已看过"
            style="@style/style36"/>
        <TextView
            android:id="@+id/open_class_duration"
            style="@style/style37"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="12dp">
        <TextView
            android:id="@+id/open_class_name"
            style="@style/style33"
        />
        <TextView
            android:id="@+id/open_class_vendor_name"
            style="@style/style34"
            android:text="来源："
        />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/public_integral_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/ico_examination_fillet"
                android:gravity="center"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="免费不"
                android:textColor="@color/colorMain"
                android:textSize="8sp"
            />
            <TextView
                android:id="@+id/public_publish_time"
                style="@style/style35"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:drawableLeft="@mipmap/ico_study_time"
                android:drawablePadding="5dp"
                android:text="2016-10-21"
            />
            <TextView
                android:id="@+id/public_play_count"
                style="@style/style35"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@id/public_publish_time"
                android:drawableLeft="@mipmap/ico_study_watch"
                android:drawablePadding="5dp"
                android:text="0次"
            />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
