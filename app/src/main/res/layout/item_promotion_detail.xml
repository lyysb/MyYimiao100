<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ico_reconciliation_fillet_click"
    android:orientation="vertical"
    android:padding="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/style11"
                android:text="数量："/>
            <TextView
                style="@style/style11"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="有效期："/>
            <TextView
                style="@style/style11"
                android:text="销货单号："/>
            <TextView
                android:id="@+id/tv_promotion_ship_time"
                android:layout_marginTop="20dp"
                style="@style/style11"
                android:text="发货日期："/>
            <TextView
                android:id="@+id/tv_promotion_payment_time"
                style="@style/style11"
                android:layout_marginTop="20dp"
                android:text="回款日期："/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/promotion_detail_qty"
                style="@style/style12"/>
            <TextView
                android:id="@+id/promotion_detail_expired_at"
                style="@style/style12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/promotion_detail_invoice_no"
                style="@style/style12"/>
            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/promotion_detail_delivery_at"
                style="@style/style12"/>
            <TextView
                android:id="@+id/promotion_detail_payment_at"
                android:layout_marginTop="20dp"
                style="@style/style12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/style11"
                android:text="供货价："/>
            <TextView
                style="@style/style11"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="产品批号："/>
            <TextView
                style="@style/style11"
                android:text="订单单号："/>
            <TextView
                android:id="@+id/tv_promotion_ship_cast"
                android:layout_marginTop="20dp"
                style="@style/style11"
                android:text="发货奖励："/>
            <TextView
                android:id="@+id/tv_promotion_payment_cast"
                style="@style/style11"
                android:layout_marginTop="20dp"
                android:text="回款奖励："/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/promotion_detail_unit_price"
                style="@style/style12"/>
            <TextView
                android:id="@+id/promotion_detail_product_batch_no"
                style="@style/style12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/promotion_detail_serial_no"
                style="@style/style12"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/promotion_detail_delivery_total_amount"
                style="@style/style12"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorRed"/>
            <TextView
                android:id="@+id/promotion_detail_payment_total_amount"
                style="@style/style12"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorRed"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>