<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="12dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/cdc_name"
        android:textSize="14sp"
        android:textColor="@color/color333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/cdc_region"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="区域：山东省\t\t济南市\t\t章丘市"
        android:layout_marginTop="10dp"
        android:textColor="@color/color666"
        android:textSize="12sp"/>
    <TextView
        android:id="@+id/cdc_address"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="11sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/color666"
        android:layout_width="match_parent"
        android:drawablePadding="6dp"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/ico_client_my_client_address"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cdc_phone_number"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="11sp"
            android:textColor="@color/color666"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/ico_client_my_client_phone"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ico_client_my_client_rectangle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>