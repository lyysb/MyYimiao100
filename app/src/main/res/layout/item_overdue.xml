<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <View
            android:layout_height="1dp"
            style="@style/view_horizontal"/>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/ico_wealth_be_overdue"
                android:layout_marginLeft="27dp"
                android:layout_marginRight="27dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:text="逾期垫款"
                    android:textSize="14sp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:textColor="@color/color333"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/overdue_amount"
                    android:text="¥0.00元"
                    android:textSize="12sp"
                    android:layout_marginBottom="18dp"
                    android:textColor="@color/colorRed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <CheckBox
        android:id="@+id/overdue_ck"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/selector_assurance"
        android:button="@null"
        android:gravity="center"
        android:padding="6dp"
        android:focusable="false"
        android:text="选择"
        android:textColor="@color/color_assurance"
        android:textSize="12sp"/>

</LinearLayout>