<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:background="@drawable/selector_reconciliation_item"
        android:layout_height="160dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/reconciliation_vendor_name"
                style="@style/style9"/>
            <TextView
                android:id="@+id/reconciliation_customer_name"
                style="@style/style9"/>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reconciliation_product_formal_name"
                    style="@style/style10"/>
                <TextView
                    android:id="@+id/reconciliation_dosage_form"
                    android:text="剂型："
                    style="@style/style10"/>

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/reconciliation_product_common_name"
                    style="@style/style10"/>
                <TextView
                    android:id="@+id/reconciliation_spec"
                    android:text="规格："
                    style="@style/style10"/>

            </LinearLayout>
            <TextView
                android:id="@+id/reconciliation_serial_no"
                android:layout_weight="1"
                android:text="协议单号："
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/color999"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>
            <TextView
                android:id="@+id/reconciliation_total_amount"
                android:layout_weight="1"
                android:text="总奖励："
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/color666"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>


        </LinearLayout>
        <ImageView
            android:layout_marginRight="11dp"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ico_reconciliation_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>