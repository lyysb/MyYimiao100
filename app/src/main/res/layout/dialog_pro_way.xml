<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/shape_dialog4"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="250dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pro_apply_amount"
            android:text="¥0.00"
            android:textSize="28sp"
            android:textColor="@color/color333"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:layout_marginLeft="26dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/pro_cash"
                android:text="提现"
                android:textSize="14sp"
                android:checked="true"
                android:textColor="@color/color333"
                android:paddingLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/pro_overdue"
                android:text="充值逾期垫款"
                android:textSize="14sp"
                android:checked="false"
                android:paddingLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/color333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <TextView
            android:id="@+id/pro_remark"
            android:text="@string/vaccine_promotion_way"
            android:lineSpacingMultiplier="1.2"
            android:textSize="10sp"
            android:visibility="gone"
            android:textColor="@color/color999"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_marginTop="10dp"
            style="@style/view_horizontal"/>

        <TextView
            android:id="@+id/pro_confirm"
            android:text="确认"
            android:textSize="14sp"
            android:textColor="@color/colorMain"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>