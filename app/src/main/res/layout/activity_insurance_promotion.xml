<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yimiao100.sale.view.TitleView
        android:id="@+id/insurance_promotion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_isShow="true"
        app:title_text="{title}"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorLoginInput">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:drawableLeft="@mipmap/ico_insurance_body"
                    android:text="推广主体详情"
                    style="@style/style3"/>

                <View
                    style="@style/view_horizontal"/>

                <LinearLayout
                    android:id="@+id/insurance_promotion_bind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="117dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:paddingLeft="12dp">

                        <TextView
                            android:id="@+id/insurance_promotion_item1"
                            style="@style/style1"
                            android:text="公司名称："/>

                        <TextView
                            android:id="@+id/insurance_promotion_item2"
                            style="@style/style1"
                            android:text="公司账号："/>

                        <TextView
                            android:id="@+id/insurance_promotion_item3"
                            style="@style/style1"
                            android:text="推广人："/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/insurance_promotion_option1"
                            style="@style/style2"
                            android:hint="请绑定公司信息"/>

                        <TextView
                            android:id="@+id/insurance_promotion_option2"
                            style="@style/style2"
                            android:hint="请绑定公司信息"/>

                        <TextView
                            android:id="@+id/insurance_promotion_option3"
                            style="@style/style2"
                            android:hint="请绑定公司信息"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="12dp"
                        android:src="@mipmap/ico_company_promotion_click"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@mipmap/ico_ins_detail"
                    android:text="保险详情"
                    style="@style/style3"/>
                <View
                    style="@style/view_horizontal"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="保险公司：            "
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_company_name"
                        style="@style/style5"/>
                </LinearLayout>

                <View
                    style="@style/view_horizontal"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="保险名称：            "
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_product_name"
                        style="@style/style5"/>
                </LinearLayout>
                <View
                    style="@style/view_horizontal"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:background="@android:color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="推广区域：            "
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_region"
                        style="@style/style5"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="商品名：                "
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_product_common_name"
                        style="@style/style5"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="7dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:drawableLeft="@mipmap/ico_ins_info"
                    android:text="推广信息"
                    style="@style/style3"/>
                <View
                    style="@style/view_horizontal"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="推广周期：            "
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_time"
                        style="@style/style5"/>
                </LinearLayout>
                <View
                    style="@style/view_horizontal"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="基础金额：            "
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_quota"
                        style="@style/style5"/>
                </LinearLayout>
                <View
                    style="@style/view_horizontal"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="推广保证金比例："
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_scale"
                        style="@style/style5"/>
                </LinearLayout>
                <View
                    style="@style/view_horizontal"/>

                <LinearLayout
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="推广保证金基数："
                        style="@style/style4"/>
                    <TextView
                        android:id="@+id/insurance_promotion_total_deposit"
                        style="@style/style5"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="38dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:drawableLeft="@drawable/shape_dot_blue"
                        android:drawablePadding="3dp"
                        android:text="增加推广指标"
                        style="@style/style4_1"/>
                    <TextView
                        android:text="将会提高您的中标机率"
                        style="@style/style4_1"/>
                </LinearLayout>

                <RelativeLayout
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:background="@mipmap/ico_company_promotion_choice"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/insurance_promotion_subtract"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@null"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/insurance_promotion_num"
                            android:text="0"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/color666"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"/>
                        <Button
                            android:id="@+id/insurance_promotion_add"
                            style="?android:attr/borderlessButtonStyle"
                            android:background="@null"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </RelativeLayout>


            </LinearLayout>
            <View style="@style/view_horizontal"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="您的最终推广指标：                    "
                    android:textSize="12sp"
                    android:textColor="@color/colorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/insurance_promotion_total_count"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorRed"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center_vertical"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="您最终需要提交的推广保证金："
                    android:textSize="12sp"
                    android:textColor="@color/colorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"/>
                <TextView
                    android:id="@+id/insurance_promotion_total_amount"
                    android:text="0"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/colorRed"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageButton
        android:id="@+id/insurance_promotion_submit"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:src="@drawable/selector_promotion"/>
</LinearLayout>
