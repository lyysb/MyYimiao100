<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <LinearLayout
        android:background="@mipmap/ico_head_reconcilation_detail"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginLeft="12dp"
            android:layout_marginRight="26dp"
            android:layout_gravity="center_vertical"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:src="@mipmap/ico_service_center"
        />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/head_recon_ins_customer_name"
                android:layout_marginTop="16dp"
                android:text="社区服务中心"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/color333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/head_recon_ins_count"
                android:text="保单数量：0单"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginTop="16dp"
                android:textColor="@color/color666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/head_recon_ins_total_amount"
                android:text="保费总金额：0.00元"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/color666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/head_recon_ins_total_reward"
                android:text="总奖励金额：0.00元"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/color666"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>