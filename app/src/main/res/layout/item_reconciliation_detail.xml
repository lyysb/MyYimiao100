<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ico_reconciliation_fillet_click"
    android:orientation="vertical"
    android:padding="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/style11"
                android:text="发货数量："/>
            <TextView
                style="@style/style11"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="有效期："/>
            <TextView
                style="@style/style11"
                android:text="销货单号："/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reconciliation_detail_qty"
                style="@style/style12"/>
            <TextView
                android:id="@+id/reconciliation_detail_expired_at"
                style="@style/style12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/reconciliation_detail_invoice_no"
                style="@style/style12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/style11"
                android:text="供货价："/>
            <TextView
                style="@style/style11"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="产品批号："/>
            <TextView
                style="@style/style11"
                android:text="订单单号："/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reconciliation_detail_unit_price"
                style="@style/style12"/>
            <TextView
                android:id="@+id/reconciliation_detail_product_batch_no"
                style="@style/style12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/reconciliation_detail_serial_no"
                style="@style/style12"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        style="@style/view_horizontal"/>
    <LinearLayout
        android:id="@+id/reconciliation_detail_ship_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_reconciliation_delivery"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/style11"
                    android:text="发货日期："/>
                <TextView
                    android:id="@+id/reconciliation_detail_delivery_at"
                    style="@style/style12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/style11"
                    android:text="发货奖励："/>
                <TextView
                    android:id="@+id/reconciliation_detail_delivery_total_amount"
                    style="@style/style12"
                    android:textColor="@color/colorRed"/>
                <TextView
                    style="@style/style12"
                    android:text="元"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/reconciliation_detail_ship"
            android:text="未确认"
            android:textSize="12sp"
            android:textColor="@color/color_riches_wealth"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_reconciliation_not_confirm"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/reconciliation_detail_payment_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_reconciliation_payment"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/style11"
                    android:text="回款日期："/>
                <TextView
                    android:id="@+id/reconciliation_detail_payment_at"
                    style="@style/style12"
                    android:text="2016年8月25日"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    style="@style/style11"
                    android:text="回款奖励："/>
                <TextView
                    android:id="@+id/reconciliation_detail_payment_total_amount"
                    style="@style/style12"
                    android:textColor="@color/colorRed"/>
                <TextView
                    style="@style/style12"
                    android:text="元"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/reconciliation_detail_payment"
            android:text="未确认"
            android:textSize="12sp"
            android:textColor="@color/color_riches_wealth"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_reconciliation_not_confirm"/>

    </LinearLayout>
    <TextView
        android:id="@+id/reconciliation_detail_withhold_remark"
        android:text="逾期扣款说明：按照每天扣除0.5%回款奖励"
        android:gravity="center_vertical"
        android:textSize="10sp"
        android:textColor="@color/color999"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</LinearLayout>