<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/promotion_cash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_isShow="true"
        app:title_text="推广奖励提现"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/ico_reconciliation_background"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlue3"
                android:padding="12dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="对公账户"
                    android:textColor="@color/color333"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/promotion_cash_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/color333"
                    android:textSize="14sp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:text="申请提现金额"
                android:textColor="@color/color666"
                android:textSize="14sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp">
                <TextView
                    android:id="@+id/promotion_cash_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/color333"
                    android:textSize="29sp"/>
            </LinearLayout>
            <View
                style="@style/view_horizontal"/>
            <TextView
                android:id="@+id/promotion_cash_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="12dp"
                android:text="联系方式："
                android:textColor="@color/color666"
                android:textSize="14sp"/>
            <View
                style="@style/view_horizontal"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:background="@mipmap/ico_details_fillet"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_text"
                    android:padding="12dp"
                    android:text="发票信息"
                    android:textColor="@color/color666"
                    android:textSize="14sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    style="@style/style26">
                    <TextView
                        style="@style/style27"
                        android:text="抬头："/>
                    <TextView
                        style="@style/style28"
                        android:text="北京亿苗通生物科技有限公司"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/style26">
                    <TextView
                        style="@style/style27"
                        android:text="发票类型："/>
                    <TextView
                        style="@style/style28"
                        android:text="增值税普通发票"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/style26">
                    <TextView
                        style="@style/style27"
                        android:text="交易类型："/>
                    <TextView
                        style="@style/style28"
                        android:text="服务费"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/style26">
                    <TextView
                        style="@style/style27"
                        android:text="邮寄地址："/>
                    <TextView
                        android:layout_height="wrap_content"
                        style="@style/style28"
                        android:text="北京市西城区西直门外大街18号金贸大厦A座1610"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginBottom="12dp"
                    style="@style/style26">
                    <TextView
                        style="@style/style27"
                        android:text="联系电话："/>
                    <TextView
                        style="@style/style28"
                        android:text="400-110-9097"/>
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/promotion_cash_apply_service"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ico_bond_customer_service"/>
            <ImageButton
                android:id="@+id/promotion_cash_apply_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="12dp"
                android:background="@null"
                android:src="@drawable/selector_assurance_apply_cash"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
