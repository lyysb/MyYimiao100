<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/name_title"
        app:left_isShow="true"
        app:title_text="姓名"
        app:right_isShow="true"
        app:title_right="保存"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorLoginInput"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:paddingLeft="12dp"
            android:gravity="center_vertical">
            <TextView
                style="@style/Personal1"
                android:text="姓名"
                />
            <EditText
                android:id="@+id/personal_name"
                style="@style/Personal3"
                android:hint="请设置您的姓名"
                />
            <ImageView
                android:id="@+id/name_clear"
                android:scaleType="center"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/selector_personal_delete"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:text="设置后，其他人将看到您的姓名"
            />
    </LinearLayout>
</LinearLayout>
