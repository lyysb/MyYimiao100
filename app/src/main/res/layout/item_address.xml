<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@android:color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/address_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/address_person_name"
            style="@style/style46"/>
        <TextView
            android:id="@+id/address_phone_number"
            style="@style/style46"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_full"
            style="@style/style46"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp"
            android:layout_below="@id/address_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <View style="@style/view_horizontal"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/address_default"
            android:paddingTop="10dp"
            android:layout_weight="1"
            android:text="默认地址"
            android:textSize="12sp"
            android:textColor="@color/change_error"
            android:paddingLeft="8dp"
            android:layout_marginLeft="30dp"
            android:button="@drawable/selector_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/address_edit"
            android:text="编辑"
            android:drawableLeft="@mipmap/ico_address_edit"
            style="@style/style47"/>
        <TextView
            android:id="@+id/address_delete"
            android:layout_marginLeft="25dp"
            android:text="删除"
            android:drawableLeft="@mipmap/ico_address_delete"
            style="@style/style47"/>

    </LinearLayout>
</LinearLayout>