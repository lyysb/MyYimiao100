<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ico_reconciliation_fillet_click"
    android:orientation="vertical"
    android:padding="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/style11"
                android:text="发货数量："/>
            <TextView
                style="@style/style11"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="有效期："/>
            <TextView
                style="@style/style11"
                android:text="销货单号："/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingRight="2dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reconciliation_detail_qty"
                style="@style/style12"/>
            <TextView
                android:id="@+id/reconciliation_detail_expired_at"
                style="@style/style12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/reconciliation_detail_invoice_no"
                style="@style/style12"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/style11"
                android:text="供货价："/>
            <TextView
                style="@style/style11"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="产品批号："/>
            <TextView
                style="@style/style11"
                android:text="订单单号："/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/reconciliation_detail_unit_price"
                style="@style/style12"/>
            <TextView
                android:id="@+id/reconciliation_detail_product_batch_no"
                style="@style/style12"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/reconciliation_detail_serial_no"
                style="@style/style12"/>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_marginTop="20dp"
        android:layout_marginBottom="14dp"
        style="@style/view_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ico_reconciliation_delivery"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">
                <TextView
                    style="@style/style11"
                    android:text="发货日期："/>
                <TextView
                    android:id="@+id/reconciliation_detail_delivery_at"
                    style="@style/style12"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/reconciliation_detail_ship_detail"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    style="@style/style11"
                    android:text="发货奖励："/>
                <TextView
                    android:id="@+id/reconciliation_detail_delivery_total_amount"
                    style="@style/style12"
                    android:textColor="@color/colorRed"/>
                <TextView
                    style="@style/style12"
                    android:text="元"/>
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/reconciliation_detail_ship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ico_reconciliation_not_not_confirmed_blue"
        />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/reconciliation_detail_overdue_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/view_horizontal"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:drawableLeft="@mipmap/ico_reconciliation_be_overdue"
                android:drawablePadding="7dp"
                android:text="垫款日期："
                android:gravity="center_vertical"
                style="@style/style11"/>

            <TextView
                android:id="@+id/reconciliation_detail_overdue_at"
                android:text="yyyy年MM月dd日"
                android:textColor="@color/color666"
                android:textSize="12sp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/reconciliation_detail_overdue_confirm"
                android:textColor="@color/color999"
                android:text="垫款"
                android:textSize="12sp"
                android:gravity="center"
                android:background="@mipmap/ico_reconciliation_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/reconciliation_detail_payment_ll"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            style="@style/view_horizontal"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ico_reconciliation_payment"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/style11"
                        android:text="回款日期："/>
                    <TextView
                        android:id="@+id/reconciliation_detail_payment_at"
                        style="@style/style12"
                        android:text="2016年8月25日"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        style="@style/style11"
                        android:text="回款奖励："/>
                    <TextView
                        android:id="@+id/reconciliation_detail_payment_total_amount"
                        style="@style/style12"
                        android:textColor="@color/colorRed"/>
                    <TextView
                        style="@style/style12"
                        android:text="元"/>
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:id="@+id/reconciliation_detail_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/ico_reconciliation_not_not_confirmed_gray"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/reconciliation_detail_withhold_remark"
        android:text="逾期扣款说明"
        android:gravity="center_vertical"
        android:textSize="10sp"
        android:textColor="@color/color999"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/reconciliation_detail_extra_reward_remark"
        android:text="发货额外奖励说明"
        android:gravity="center_vertical"
        android:textSize="10sp"
        android:textColor="@color/color999"
        android:paddingTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>