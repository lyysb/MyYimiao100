<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/commodity_confirm_title"
        app:title_text="确认订单"
        app:left_isShow="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/commodity_confirm_bottom"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View style="@style/view_horizontal"/>
        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="单价："
                android:textSize="14sp"
                android:textColor="@color/color999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/commodity_confirm_integral2"
                android:text="{count}"
                android:textSize="17sp"
                android:textColor="@color/colorRed3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text=" 积分"
                android:textSize="14sp"
                android:textColor="@color/color666"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/commodity_confirm_exchange"
                android:src="@mipmap/ico_order_exchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/commodity_confirm_title"
        android:layout_above="@id/commodity_confirm_bottom"
        android:background="@color/colorEee"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/commodity_confirm_select_address"
            android:padding="12dp"
            android:text="选择收货地址"
            android:textSize="14sp"
            android:textColor="@color/color333"
            android:background="@android:color/white"
            android:drawableRight="@mipmap/ico_achievement_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:background="@color/colorGreen1"
            android:padding="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/commodity_confirm_name"
                android:text="姓名："
                style="@style/style56"/>
            <TextView
                android:id="@+id/commodity_confirm_phone"
                android:layout_marginTop="15dp"
                android:text="电话："
                style="@style/style56"/>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="地址："
                    style="@style/style56"/>
                <TextView
                    android:id="@+id/commodity_confirm_address"
                    style="@style/style56"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:padding="12dp"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/commodity_confirm_image"
                android:src="@mipmap/ico_default_short_picture"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/commodity_confirm_goods_name"
                    android:textSize="14sp"
                    android:textColor="@color/color333"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View style="@style/view_horizontal"/>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@mipmap/ico_order_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/commodity_confirm_integral"
                            android:text="积分："
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/color333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/commodity_confirm_unit_price"
                            android:text="市场参考价："
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            android:textColor="@color/color999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
