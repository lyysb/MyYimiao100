<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="9dp"
    android:paddingBottom="7dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/type1_image"
        android:src="@mipmap/ico_default_short_picture"
        android:scaleType="centerCrop"
        android:layout_width="108dp"
        android:layout_height="90dp"/>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="11dp"
        android:orientation="vertical">
        <TextView
            style="@style/InformationItem1"
            android:id="@+id/type1_title"
            />
        <TextView
            style="@style/InformationItem2"
            android:lineSpacingMultiplier="1.2"
            android:id="@+id/type1_abstract"
            />
        <LinearLayout
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                style="@style/InformationItem3"
                android:id="@+id/type1_source"
                />
            <TextView
                android:id="@+id/type1_commentNumber"
                style="@style/InformationItem3"
                android:layout_marginRight="7dp"
                android:layout_marginLeft="7dp"
                />
            <TextView
                style="@style/InformationItem3"
                android:id="@+id/type1_publishAt"
                />
            <ImageView
                android:id="@+id/type1_top"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ico_information_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>