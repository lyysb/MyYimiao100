<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/TitleStyle"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.yimiao100.sale.view.TitleView
        android:id="@+id/confirm_promotion"
        app:left_isShow="true"
        app:title_text="公司推广"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:background="@color/colorLoginInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@mipmap/ico_personal_promotion_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/confirm_promotion_money"
                android:padding="11dp"
                android:background="@android:color/white"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="match_parent"
                android:textSize="14sp"
                android:textColor="@color/color999"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/color666"
                android:text="转账汇款账户"
                android:background="@android:color/white"
                android:layout_marginTop="7dp"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                style="@style/view_horizontal"
                />

            <LinearLayout
                android:background="@color/colorLoginInput"
                android:padding="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:padding="11dp"
                    android:background="@mipmap/ico_personal_promotion_fillet"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="开户名称："
                            style="@style/style6"/>
                        <TextView
                            android:text="北京亿苗通生物科技有限公司"
                            style="@style/style7"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="开户行    ："
                            style="@style/style6"/>
                        <TextView
                            android:text="中国银行北京西直门支行"
                            style="@style/style7"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="银行账号："
                            style="@style/style6"/>
                        <TextView
                            android:text="329863413119"
                            style="@style/style7"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/colorMain"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:text="注意："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/confirm_promotion_time"
                        android:textColor="@color/color999"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="12dp"
                    android:textColor="@color/color999"
                    android:textSize="12sp"
                    android:text="未按时提交竞标保证金者，将不具备竞标资格。"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <Button
                android:id="@+id/confirm_promotion_confirm"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/selector_confirm"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
