<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:background="@mipmap/ico_reconciliation_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="请仔细核对发货或回款信息\n如有任何疑问点击异议留言，等待客服回复。"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:gravity="center_horizontal"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_marginTop="140dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/shape_dialog"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_disagree"
            android:layout_weight="1"
            android:gravity="center"
            android:text="异议"
            android:textColor="@color/confirm_reconciliation"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
        <View
            android:background="@color/color999"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/dialog_agree"
            android:layout_weight="1"
            android:gravity="center"
            android:text="同意"
            android:textColor="@color/confirm_reconciliation"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>
    </LinearLayout>
</LinearLayout>