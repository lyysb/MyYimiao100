<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="14dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLoginInput"
    android:orientation="vertical">
    <EditText
        android:id="@+id/et_comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="top"
        android:scrollbars="vertical"
        android:background="@drawable/shape_input_comment"
        android:hint="请发表您的观点"
        android:textSize="15sp"
        android:padding="10dp"
        android:textColorHint="@color/color999"
        android:minLines="3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        >
        <TextView
            android:text="请发表您的个人观点"
            android:textSize="12sp"
            android:textColor="@color/color999"
            android:drawableLeft="@mipmap/ico_comment_right"
            android:drawablePadding="6dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/submit_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/selector_comment_publish"/>
    </LinearLayout>
</LinearLayout>