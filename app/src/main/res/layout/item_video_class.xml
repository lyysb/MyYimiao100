<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingBottom="6dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="9dp">
    <RelativeLayout
        android:layout_width="96dp"
        android:layout_height="86dp"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/exam_course_logo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_default_short_picture"/>
        <TextView
            android:id="@+id/exam_course_status"
            style="@style/style36"
            android:text="已看过"/>
        <TextView
            android:id="@+id/exam_course_duration"
            style="@style/style37"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/exam_course_ex"
            android:src="@mipmap/ico_examination_complete"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/exam_course_name"
                style="@style/style33"
            />
            <TextView
                android:id="@+id/exam_course_vendor_name"
                style="@style/style34"
                android:text="来源："
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/exam_course_integral_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/ico_examination_fillet"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="免费不"
                    android:textColor="@color/colorMain"
                    android:textSize="8sp"
                />
                <TextView
                    android:id="@+id/exam_course_publish_time"
                    style="@style/style35"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/ico_study_time"
                    android:drawablePadding="5dp"
                    android:text="2016-10-21"
                />
                <TextView
                    android:id="@+id/exam_course_count"
                    style="@style/style35"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="14dp"
                    android:layout_toLeftOf="@id/exam_course_publish_time"
                    android:drawableLeft="@mipmap/ico_study_watch"
                    android:drawablePadding="5dp"
                    android:text="0次"
                />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
