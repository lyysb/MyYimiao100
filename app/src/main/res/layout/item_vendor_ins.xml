<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:padding="12dp"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/item_vendor_ins"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_vendor_ins_company_name"
                android:text="CompanyName"
                android:textSize="14sp"
                android:textColor="@color/color333"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_vendor_ins_region"
                android:text="Region"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="13dp"
                android:textSize="14sp"
                android:textColor="@color/color333"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_vendor_ins_count"
                    android:text="保单数量：0单"
                    android:textColor="@color/color666"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_vendor_ins_total_amount"
                    android:text="保单总金额：0.00元"
                    android:textColor="@color/color666"
                    android:textSize="12sp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>

            <TextView
                android:id="@+id/item_vendor_ins_total_sale"
                android:text="总金额奖励：0.00元"
                android:textSize="12sp"
                android:textColor="@color/color333"
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_vendor_ins_serial_no"
                android:text="协议单号："
                android:textSize="12sp"
                android:textColor="@color/color333"
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:src="@mipmap/ico_achievement_next"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </LinearLayout>
    <View
        style="@style/view_horizontal"/>
    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/item_vendor_ins_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:progress="50"
            android:max="200"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="5dp"/>

        <TextView
            android:id="@+id/item_vendor_ins_pro_text"
            android:text="0/0"
            android:textSize="12sp"
            android:textColor="@color/color666"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>