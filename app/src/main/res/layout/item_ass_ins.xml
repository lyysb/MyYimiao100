<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/selector_reconciliation_item"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/ass_ins_region"
                android:text="推广区域："
                android:textSize="12sp"
                android:textColor="@color/color333"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/ass_ins_product_name"
                android:text="保险名称："
                android:textSize="12sp"
                android:textColor="@color/color333"
                android:textStyle="bold"
                android:lines="1"
                android:ellipsize="end"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <TextView
                android:id="@+id/ass_ins_serial_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="协议单号："
                android:textColor="@color/color999"
                android:textSize="12sp"/>
            <View
                android:layout_marginRight="20dp"
                style="@style/view_horizontal"/>
            <TextView
                android:id="@+id/ass_ins_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="可提现金额：0.00元"
                android:textColor="@color/color999"
                android:textSize="12sp"/>


        </LinearLayout>
        <CheckBox
            android:id="@+id/ass_ins_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_assurance"
            android:button="@null"
            android:gravity="center"
            android:padding="6dp"
            android:focusable="false"
            android:text="选择"
            android:textColor="@color/color_assurance"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>