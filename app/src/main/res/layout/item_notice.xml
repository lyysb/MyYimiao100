<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ll_notice_list"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="15dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/notice_level"
        android:src="@mipmap/ico_notice_red"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/notice_list_title"
            android:text="title"
            android:textSize="14sp"
            android:textColor="@color/color666"
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="createAt"
                android:id="@+id/notice_created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="9dp"
                android:textColor="@color/color999"
                />
            <TextView
                android:id="@+id/notice_account_type"
                android:text="type"
                android:background="@mipmap/ico_notice_company"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:textSize="9sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/notice_status"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:src="@mipmap/ico_notice_triangle_activation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>