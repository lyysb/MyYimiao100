<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_win_score"
    style="@style/TitleStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:background="@mipmap/ico_integral_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.yimiao100.sale.view.TitleView
            android:id="@+id/win_title"
            app:title_text="学习/赚积分"
            app:left_isShow="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
    </FrameLayout>
    <LinearLayout
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.TabLayout
            android:id="@+id/win_tabs"
            app:tabSelectedTextColor="@color/colorMain"
            app:tabTextColor="@color/color666"
            app:tabIndicatorColor="@color/colorMain"
            app:tabIndicatorHeight="2dp"
            app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/win_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
